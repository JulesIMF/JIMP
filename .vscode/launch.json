    "version": "0.2.0",
    "configurations": [
        {
            "name": "g++ - Сборка и отладка активного файла",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/jimp",
            "args": ["debug/table.bmp"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Включить автоматическое форматирование для gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "miDebuggerPath": "/usr/bin/gdb"
        }
    ]
}